
@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this Teacher?</h2>
<div>Name: @Model.Name</div>

<!-- Providing a confirmation prompt allows the user to think about the deletion if it is an accident or not -->
<form method="POST" action="/Teacher/Delete/@Model.Id">
    <input type="submit" value="Delete"/>
</form>